<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- 定义名为BeatBoxButton的style，继承"android:style/Widget.Holo.Button" -->
    <style name="BeatBoxButton" parent="android:style/Widget.Holo.Button">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/buttonstyle</item>
    </style>

    <style name="normalText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <!-- 通过命名的方式继承normalText style -->
    <style name="normalText.Strong">
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- textview样式 -->
    <style name="normalText.Strong.title1">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="layoutStyle">
        <item name="android:padding">5dp</item>
        
    </style>

</resources>
